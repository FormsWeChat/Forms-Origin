<!--pages/designPage/filterComponent/filter.wxml-->
<template name="orderButton">
  <button wx:if="{{clicked}}" class="sort-by-it" bindtap='click{{name}}' id="{{name}}">{{name}}</button>
  <button wx:else class="sort-by-it-checked" bindtap='click{{name}}' id="{{name}}">{{name}}</button>
</template>
<view class="filter-component-container">
  <view class="back-container">
    <button class="back">Back to suggestion</button>
  </view>
  <view class="sort-by-container">
    <text class="filter-text">Sort by</text>
    <view class="sort-button-group">
    <template wx:for="{{orderCandidate}}" is="orderButton" data="{{...item}}"></template>
    </view>
  </view>
  <view class="price-range-container">
    <text class="filter-text">Price range</text>
    <view class="zy-slider">
      <zy-slider minValue="{{minPrice}}" maxValue="{{maxPrice}}" min="0" max="300" selectedColor="#008272" blockColor="#008272" bind:lowValueChange="lowValueChangeAction"
                bind:heighValueChange="highValueChangeAction" />
    </view>
  </view>
  <button class="apply-filter-button" bindtap='applyFilter'>Apply</button>
</view>