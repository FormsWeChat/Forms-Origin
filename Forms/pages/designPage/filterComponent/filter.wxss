/* pages/designPage/filterComponent/filter.wxss */
.zy-slider{
  padding-top: 10px;
}
.back-container {
  align-items: left;
  height: 40px;
  width: 100%;
  display: inline-block
}

.back{
  width: 50%;
  height: 40px;
  font-size: 14px;
  color: #a8a8a8;
  display: inline-block;
}
.back::after {
  border: none;
}
.filter-text {
  font-size: 15px;
  display: flex;
  padding-top: 10px;
  padding-left: 10px;
  color: #008272;
}
.sort-button-group {
  margin-top: 10px;
  font-size: 13px;
  margin-left: 5%;
  width: 90%;
  display: inline-block;
  height: 40px;
}
.sort-button-group::after {
  border: none;
}

.sort-by-it {
  padding: 0;
  text-align: center;
  font-size: 13px;
  line-height: 40px;
  height: 40px;
  width: 33.33%;
  display: inline-block;
  border-radius: 0;
  border-top: 1px solid #008272;
  border-bottom: 1px solid #008272;
}

.left {
  border: 1px solid #008272;
  border-radius:5px 0px 0px 5px;
}

.right {
  border: 1px solid #008272;
  border-radius:0px 5px 5px 0px;
}

.sort-by-it-checked {
  padding: 0;
  text-align: center;
  line-height: 40px;
  font-size: 13px;
  height: 40px;
  width: 33.33%;
  background-color: #008272;
  color: #ffffff;
  display: inline-block;
  border-radius: 0;
  border: 1px solid #008272;
}

.sort-by-it-checked::after{
  border-radius: 0;
}

.apply-filter-button {
  font-size: 15px;
  background-color: #f4f4f4;
  width: 80%;
  color: #008272;
  border: 1px solid #008272;
}