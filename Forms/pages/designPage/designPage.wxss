/**index.wxss**/
@import "suggestionList/suggestionList.wxss";
.container {
  align-items: left;
  padding: 0px;  
  width: 100%
}

.title-container {
  padding-top: 30px;
  display: inline-block;
  width: 100%;
  padding-left: 10%;
  flex-direction: row;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.input-title-container {
  padding-left: 0.3%;
}

.input-title{
  font-size: 20px;
  height: 40px;
}

.suggest-title {
  background-color: #F4F4F4;
  align-items: center;
  width: 100%;
  height: 60%;
}

.footer {
  position: absolute;
  bottom: 0px;
  width: 100%;
}

.design-container {
  display: inline-block;
  width: 100%;
  height: 200px;
  margin-left: 10%;
}

.options-container {
  max-height: 15vh;
}

.div-line {
  height: 1px;
  background-color: #c4bdbd;
  width: 80%;
  margin-top: 2%;
}

.suggestionContainer {
  border: 1px solid #f4f4f4;
  padding: 0;
  margin-top: 2%;
}

.item-suggest-button {
  margin-top: 2%;
  margin-bottom: 2%;
}

.itemImage {
  width: 30%;
  height: 45px;
  padding-left: 2%;
}

.com-rating {
  font-size: 1em;
}

.detail {
  padding-left: 2%;
  color: #a8a8a8;
}

.detail .title {
  font-size: 70%;
  color: #333333;
  padding-top: 2%;
}

.option {
  padding-top: 5%;
  width: 80%;
}

.option-input {
  font-size: 13px;
  padding-left: 1%;
}

.botton-buttons {
  padding-top: 10px;
  padding-left: 1vw;
}

.add-options-button {
  text-align: left;
  border: none;
  background-color: #ffffff;
  color:#008272;
  font-size: 13px;
  padding:0;
  display: inline-block;
}

.done-button {
  position: absolute;
  right: 7vw;
  background-color: #ffffff;
  font-size: 13px;
  color:#008272;
  display: inline-block;
}

.done-button::after {
    border: none;
}

.add-options-button::after {
  border: none;
}