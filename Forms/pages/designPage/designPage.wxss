/**index.wxss**/
.container {
  align-items: left;
  padding: 0px;  
  width: 100%
}

.title-container {
  padding-top: 30px;
  display: inline-block;
  width: 80%;
  padding-left: 10%;
  flex-direction: row;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.input-title-container {
  border: 1px solid #c4bdbd;
  border-radius: 5px;
  padding-left: 10px;
}

.input-title{
  font-size: 15px;
  height: 50px;
}

.suggest-title {
  background-color: #F4F4F4;
  align-items: center;
  width: 100%;
  height: 400px;
}

.suggest-title-text {
  display: inline-block;
  padding-top: 50px;
  padding-left: 15%;
  width: 70%;
  font-size: 15px;
  color: #c4bdbd;
}

.title-suggest-button {
  font-size: 15px;
  width: 70%;
  margin-top: 20px;
  border:1px solid #008272;
  color: #008272;
}

.title-suggest-button-hover { 
    background-color: #008272;
    color: #ffffff;
}

.footer {
  position: absolute;
  bottom: 0px;
  width: 100%;
}

.options-container {
  display: inline-block;
  width: 100%;
  height: 200px;
}

.div-line {
  height: 1px;
  background-color: #c4bdbd;
  width: 80%;
  margin-top: 10px;
}

.option-text {
  padding-top: 25px;
  width: 80%;
  padding-left: calc(10% + 10px);
}

.option-input {
  font-size: 15px;
}

.option-card {
  padding-top: 25px;
  width: 80%;
  height: 100px;
  padding-left: calc(10% + 10px);
}

.option-img {
  width: 100px;
  height: 100px;
}

.Title {
  font-size: 15px;
}
.add-options-button {
  padding-top: 10px;
  text-align: left;
  padding-left: calc(10% + 10px);
  border: none;
  background-color: #ffffff;
  color:#008272;
  font-size: 15px
}

.add-options-button::after {
  border: none;
}