/**index.wxss**/
.container {
  align-items: left;
  padding: 0px;  
  width: 100%
}

.title-container {
  padding-top: 30px;
  display: inline-block;
  width: 80%;
  padding-left: 10%;
  flex-direction: row;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

.input-title-container {
  padding-left: 5px;
}

.input-title{
  font-size: 20px;
  height: 40px;
}

.suggest-title {
  background-color: #F4F4F4;
  align-items: center;
  width: 100%;
  height: 400px;
}

.footer {
  position: absolute;
  bottom: 0px;
  width: 100%;
}

.options-container {
  display: inline-block;
  width: 100%;
  height: 200px;
}

.div-line {
  height: 1px;
  background-color: #c4bdbd;
  width: 80%;
  margin-top: 5px;
  margin-left: 10%;
}

.option {
  padding-top: 25px;
  width: 80%;
  padding-left: calc(10% + 5px);
}

.option-input {
  font-size: 13px;
}

.add-options-button {
  padding-top: 10px;
  text-align: left;
  padding-left: calc(10% + 5px);
  border: none;
  background-color: #ffffff;
  color:#008272;
  font-size: 15px
}

.add-options-button::after {
  border: none;
}