<view class="list-container">
  <template name="item-suggest">
    <button class="item-suggest-button" bindtap='onSuggestButton' id="{{title}}">
      {{title}}
    </button>
  </template>
</view>

<view wx:for="{{restaurants}}" wx:key="{{restaurants}}">
  <template is="item-suggest" data="{{...item}}"> </template>
</view>
<view class="tips">
  <view wx:if="{{ hasMore }}">
    <image src="/images/loading.gif" mode="aspectFill" />
    <text>Loading...</text>
  </view>
  <view wx:else>
    <text>No More</text>
  </view>
</view>

<loading hidden="{{ !loading }}">Loading...</loading>
