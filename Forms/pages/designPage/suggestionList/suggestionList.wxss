.suggestionContainer {
  width:80%;
  padding-left:10%;
}

.item-suggest-button {
  margin-top: 30rpx;
  display: flex;
  height: 80px;
}

.itemImage {
  width: 100px;
  height: 60px;
  margin-right: 35rpx;
  border-radius: 3px;
}

.list-container {
  display: flex;
}

.scroll-suggest-list {
  max-height: 56vh;
  padding-top: 12px;
}

.top {
  width: 100%;
  height: 2.5em;
  display: flex;
  align-items: center;
  font-size: 22rpx;
  margin-top: 5px;
}

.top .title {
  font-size: 14px;  
  color: #666666;
  padding-top: 14px;
}

.filterButton {
  display: flex;
  margin-right:-2rpx;
  align-items: center;
  font-size: 12px;
  color: #666666;
  margin-top: 15px;
}

.detail {
  flex: 1;
}

.detail .title {
  display: block;
  font-size: 15px;
}

.detail .comments,
.detail .price {
  display: inline;
  font-size: 22rpx;
  margin-left: 5px;
}

.tips {
  font-size: 28rpx;
  text-align: center;
  padding: 50rpx;
  color: #ccc;
}

/*  */
.com-rating {
  display: inline-block;
  font-size: 1.2em;
  letter-spacing: .3em;
}
.com-rating .rating-on,
.com-rating .rating-off {
  display: inline-block;
}
.com-rating .rating-on {
  position: absolute;
  overflow: hidden;
  padding: 0;
  margin: 0;
}
.com-rating .rating-off {
  padding: 0;
  margin: 0;
}

.suggest-button-hover {
  background-color: #e4ebec;
  width: 150%
}
