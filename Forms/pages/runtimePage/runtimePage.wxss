/* pages/runtimePage/runtimePage.wxss */
.container {
  padding: 0;
  width: 100%;
  height: 730px;
  display: inline-block;
  background-color: #f4f4f4;
}

.runtime-title {
  font-size: 20px;
  padding-top: 10%;
  text-align: center
}

.swiper-container {
  height: 80%;
  padding-top: 10%;
}

.swiper-item {
  width: 300px;
  height: 100%;
}

.swiper-item-container {
  background-color: #ffffff;
  width: calc(100% - 30px);
  height: calc(100% - 150px);
  border-radius: 0px 0px 5px 5px;
}

.image-container {
  height: 300px;
  width: 100%;
  overflow: hidden;
  border-radius: 5px;
}

.swiper-item-image {
  height: 280px;
  border-radius: 5px;
}

.information-container {
  width: 90%;
  padding-left: 5%;
  display: inline-block;
}

.title-container{
  width: 100%;
  display: table;
  padding-bottom: 20px;
  padding-top: 10px;
}

.title {
  display: table-cell;
  font-size: 16px;
  line-height: 30px;
}

.distance {
  display: table-cell;
  color: #a8a8a8;
  font-size: 13px;
  line-height: 30px;
  text-align: right;
  position: absolute;
  right: 45px;
}

.rating-comment-price {
  display: inline-block;
  padding-bottom: 10px;
  padding-top: 0px;
}

.rating-information {
  color: #a8a8a8;
  font-size: 13px;
}

.comment-information {
  color: #a8a8a8;
  font-size: 13px;
  padding-left: 20px;
}

.price-information {
  color: #a8a8a8;
  font-size: 13px;
  padding-left: 20px;
}

.type-information {
  color: #a8a8a8;
  font-size: 13px;
}

.vote-button-container {
  background-color: #ffffff;
  width: calc(100% - 30px);
  height: 80px;
  position: absolute;
  border-radius: 0px 0px 5px 5px;
}

.vote-button {
  width: 80%;
  border: 1px solid #008272;
  color: #008272;
  background-color: #ffffff;
  margin-top: 10px;
}