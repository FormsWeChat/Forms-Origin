/* pages/runtimePage/runtimePage.wxss */
.container {
  padding: 0;
  width: 100vw;
  height: 100vh; 
  display: inline-block;
  background-color: #f4f4f4;
}

.runtime-title {
  font-size: 20px;
  padding-top: 10%;
  text-align: center
}

.swiper-container {
  height: 84%;
  padding-top: 10%;
}

.swiper-item {
  width: 90%;
  height: 100%;
}

.swiper-item-container {
  background-color: #ffffff;
  width: 90%;
  border-radius: 0px 0px 5px 5px;
}

.image-container {
  height: 40vh;
  width: 100%;
  overflow: hidden;
  border-radius: 5px;
}

.swiper-item-image {
  height: 40vh;
  border-radius: 5px;
}

.information-container {
  width: 90%;
  padding-left: 5%;
  display: inline-block;
}

.title-container{
  width: 100%;
  display: table;
  padding-bottom: 4%;
  padding-top: 2%;
}

.title {
  display: table-cell;
  font-size: 14px;
  line-height: 30px;
}

.distance {
  display: table-cell;
  color: #a8a8a8;
  font-size: 13px;
  line-height: 30px;
  text-align: right;
  position: absolute;
  right: 45px;
}

.rating-comment-price {
  display: inline-block;
  padding-bottom: 10px;
  padding-top: 0px;
}

.rating-information {
  color: #a8a8a8;
  font-size: 13px;
}

.comment-information {
  color: #a8a8a8;
  font-size: 13px;
  padding-left: 20px;
}

.price-information {
  color: #a8a8a8;
  font-size: 13px;
  padding-left: 20px;
}

.type-information {
  color: #a8a8a8;
  font-size: 13px;
}

.vote-button-container {
  background-color: #ffffff;
  width: 90%;
  height: 14%;
  position: absolute;
  border-radius: 0px 0px 5px 5px;
}

.vote-button {
  font-size: 16px;
  height: 8vh;
  line-height: 8vh;
  width: 90%;
  border: 1px solid #008272;
  color: #008272;
  background-color: #ffffff;
  margin-top: 2%;
}

.share-button-container {
  width: 100%;
  position: absolute;
  bottom: 0;
  height: 70px;
  background-color: #ffffff;
}

.icon_wrapper {
  position: relative;
  text-align: center;
  display: flex;
  align-items: center;

}

.share-button {
  background-color: #ffffff;
  color: #008272;
  height: 100%;
  padding-top: 1%;
  display: inline-flex;
  margin-top: 7px;
}

.share-button::after {
  border: none;
}

.share_icon {
  height: 22px;
  width: 25px;
  display: inline-flex;
  vertical-align: middle;
  margin-left: 500px;
}