<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <text wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 正在获取您的个人信息 </text>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <button class="user-motto" bindtap="onClickStart">进入Forms</button>
  </view>
</view>
