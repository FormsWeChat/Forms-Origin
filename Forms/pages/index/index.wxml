<!--index.wxml-->
<view style="width: {{width}}px; height: {{height}}px; background-image: url({{src}})"> 
<view>
  <view class="userinfo">
  <loading wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">Loading</loading>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
</view>
  <view class="usermotto">
    <button class="user-motto" bindtap="onClickStart">Create new poll</button>
  </view>
</view>
