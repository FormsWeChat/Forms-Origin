/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 256rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #ffffff;
  margin-top: 3px;
}

.user-motto {
  background-color: #ffffff;
  color: #008272;
  width: calc(90% - 20px);
  border-radius: 10px;
  height: 45px;
  font-size: 16px;
  text-align: center;
  font-weight: 500;
  position: absolute;
  bottom: 100px;
  left: 25px;
}