
<view class="page">

    <view class="page__hd">

        <text class="page__title">Where should we eat?</text>

    </view>

    <view class="page__bd">

        <view class="section section_gap">

            <block wx:for="{{vote.items}}" wx:for-index="idx" wx:for-item="item">
                <text>{{item.storeName}}({{item.count}})</text>
                
                <progress percent="{{100*item.count/vote.count}}" stroke-width="10"                      backgroundColor='#fa' activeColor='#008272'style='border-radius:100px;overflow:hidden'/>

            </block>

        </view>

        <view class="btn-area">

            <view class="button-wrapper">

            <button type="default" bindtap="bookshop">Booking({{vote.storeName}})</button>

            </view>

        </view>

    </view>

</view>